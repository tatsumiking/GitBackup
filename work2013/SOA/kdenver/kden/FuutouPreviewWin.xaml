<Window x:Class="kden.FuutouPreviewWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FuutouPreviewWin" Height="740" Width="1024" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="GhostWhite" >
            <Button x:Name="btnPrint" Content="印刷" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="btnPrint_Click"/>
            <Button x:Name="btnReturn" Content="閉じる" HorizontalAlignment="Left" Margin="310,10,0,10" Width="75" Click="btnReturn_Click"/>
        </Grid>
        <Grid Grid.Row="1" Background="LightGoldenrodYellow">
            <Canvas x:Name="canvasPreview" Margin="10,10,0,10">

            </Canvas>
        </Grid>
    </Grid>
</Window>
