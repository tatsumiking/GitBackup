<Window x:Class="Observe.BlockWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlockWin"
        Height="174" Width="1020"
        Top="502" Left="0"
        Topmost="True" 
        WindowStyle="None"
        Loaded="Window_Loaded"
        Icon="Observe.ico" FontSize="14" PreviewMouseDown="Window_PreviewMouseDown">
    <Grid x:Name="gridBlock">
        <Canvas x:Name="cnvsTitle" Margin="0,0,0,120">
        </Canvas>
        <Grid x:Name="gridList" Margin="0,40,0,0">
            <ScrollViewer x:Name="scrlList"
                HorizontalScrollBarVisibility="Disabled" 
                VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="cnvsList"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
